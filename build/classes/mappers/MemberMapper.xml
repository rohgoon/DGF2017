<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member.model.MemberDao"> 
  <insert id="insert" parameterType="member">
      insert into member values(#{id},#{name},#{password},#{email},#{phone},#{regDate})
  </insert>
  <select id="selectAllById" parameterType="string" resultType="member">
      select * from member where memberid = #{id}
  </select>
  <select id="selectList" resultType="member">
      select * from member order by regdate desc
  </select>
  <update id="updatePwdById" parameterType="string">
      update member set password = #{password} where password = #{password}      
  </update>
</mapper>